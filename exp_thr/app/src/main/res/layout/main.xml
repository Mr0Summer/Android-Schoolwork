<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainAcitvity">

    <EditText
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:cursorVisible="false"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
    />
    <EditText
        android:id="@+id/nm_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@id/txt"
        >
    </EditText>

    <Button
        android:id="@+id/nm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/outside"
        android:text="匿名内部类" />
    <Button
        android:id="@+id/outside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="外部类"
        app:layout_constraintTop_toBottomOf="@+id/bn"
        />
    <Button
        android:id="@+id/bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内部类"
        />


    <EditText
        android:id="@+id/act_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@id/nm_txt"
        />
    <Button
        android:id="@+id/act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity"

        app:layout_constraintTop_toBottomOf="@id/nm"
        />







</android.support.constraint.ConstraintLayout>